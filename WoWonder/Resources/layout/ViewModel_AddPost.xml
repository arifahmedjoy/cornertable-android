<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="100dp"
	android:layout_weight="10"
	android:orientation="vertical">
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="60dp"
		android:orientation="horizontal">
		<refractored.controls.CircleImageView
			android:id="@+id/image"
			android:layout_weight="0"
			android:layout_width="40dp"
			android:layout_marginStart="10dp"
			android:layout_height="40dp"
			android:layout_gravity="center"
			android:layout_centerVertical="true"
			android:layout_alignParentStart="true"
			android:scaleType="centerCrop"
			app:civ_border_width="1dp"
			app:civ_border_color="@color/textLight_color"
			android:src="@drawable/Cover_image" />
		<TextView
			android:id="@+id/postText"
			android:focusable="true"
			android:clickable="true"
			android:background="?android:selectableItemBackground"
			android:layout_toEndOf="@+id/image"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_gravity="center"
			android:layout_marginStart="1dp"
			android:layout_marginEnd="2dp"
			android:gravity="center_vertical"
			android:layout_centerVertical="true"
			android:paddingStart="13dp"
			android:paddingEnd="10dp"
			android:lines="2"
			android:layout_weight="6"
			android:text="@string/Lbl_Whats_Going_On"
			android:textColor="@color/text_color_in_between"
			android:textSize="12sp" />
		<LinearLayout
			android:id="@+id/photoLinear"
			android:focusable="true"
			android:clickable="true"
			android:background="?android:selectableItemBackground"
			android:layout_width="wrap_content"
			android:gravity="center"
			android:layout_gravity="center"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:orientation="vertical"
			android:visibility="gone">
			<ImageView
				android:id="@+id/photoimage"
				android:layout_width="18dp"
				android:paddingStart="0dp"
				android:layout_marginTop="5dp"
				android:layout_height="16dp"
				android:layout_gravity="center"
				android:layout_marginStart="14dp"
				android:layout_marginEnd="14dp"
				android:scaleType="centerCrop"
				android:src="@drawable/icon_camera_vector" />
			<TextView
				android:id="@+id/postText"
				android:layout_toEndOf="@+id/image"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:text="@string/Lbl_Photos"
				android:layout_marginTop="5dp"
				android:textSize="9sp" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/moreLinear"
			android:layout_toEndOf="@+id/postText"
			android:layout_width="wrap_content"
			android:gravity="center"
			android:focusable="true"
			android:clickable="true"
			android:background="?android:selectableItemBackground"
			android:layout_gravity="center"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:orientation="vertical"
			android:visibility="gone">
			<ImageView
				android:id="@+id/moreimage"
				android:layout_width="21dp"
				android:paddingStart="2dp"
				android:layout_marginTop="4dp"
				android:layout_height="21dp"
				android:layout_gravity="center"
				android:layout_marginStart="14dp"
				android:layout_marginEnd="14dp"
				android:tint="#999"
				android:scaleType="centerCrop"
				android:src="@drawable/lb_ic_more" />
			<TextView
				android:id="@+id/postText"
				android:layout_toEndOf="@+id/image"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:text="@string/Lbl_More"
				android:layout_marginTop="2dp"
				android:textSize="9sp" />
		</LinearLayout>
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="40dp"
		android:orientation="horizontal"
		android:paddingStart="20dp"
		android:paddingEnd="20dp">
		<RelativeLayout
			android:id="@+id/rlPostGallery"
			android:layout_width="100dp"
			android:layout_height="30dp">
			<View
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:background="@drawable/rounded_more"
				android:backgroundTint="@color/colorMore4"
				android:alpha="0.2"/>
			<TextView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginStart="15dp"
				android:text="@string/Lbl_Gallery"
				android:gravity="center"
				android:textSize="12sp"
				android:textColor="@color/colorMore4"/>
			<RelativeLayout
				android:layout_width="30dp"
				android:layout_height="30dp"
				android:background="@drawable/circle_drawable"
				android:backgroundTint="@color/colorMore4"
				android:gravity="center">
				<ImageView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@drawable/ic_post_gallery"
					android:layout_margin="7dp"/>
			</RelativeLayout>
		</RelativeLayout>

		<View
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"/>

		<RelativeLayout
			android:id="@+id/rlPostFriend"
			android:layout_width="120dp"
			android:layout_height="30dp">
			<View
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:background="@drawable/rounded_more"
				android:backgroundTint="@color/colorMore7"
				android:alpha="0.2"/>
			<TextView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginStart="15dp"
				android:text="@string/Lbl_Friend"
				android:gravity="center"
				android:textSize="12sp"
				android:textColor="@color/colorMore7"/>
			<RelativeLayout
				android:layout_width="30dp"
				android:layout_height="30dp"
				android:background="@drawable/circle_drawable"
				android:backgroundTint="@color/colorMore7"
				android:gravity="center">
				<ImageView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@drawable/ic_post_friend"
					android:layout_margin="8dp"/>
			</RelativeLayout>
		</RelativeLayout>

		<View
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"/>

		<RelativeLayout
			android:id="@+id/rlPostLive"
			android:layout_width="80dp"
			android:layout_height="30dp">
			<View
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:background="@drawable/rounded_more"
				android:backgroundTint="@color/colorMoreSection"
				android:alpha="0.2"/>
			<TextView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginStart="15dp"
				android:text="@string/Lbl_PostLive"
				android:gravity="center"
				android:textSize="12sp"
				android:textColor="@color/colorMoreSection"/>
			<RelativeLayout
				android:layout_width="30dp"
				android:layout_height="30dp"
				android:background="@drawable/circle_drawable"
				android:backgroundTint="@color/colorMoreSection"
				android:gravity="center">
				<ImageView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@drawable/ic_post_live"
					android:layout_margin="8dp"/>
			</RelativeLayout>
		</RelativeLayout>

	</LinearLayout>
</LinearLayout>