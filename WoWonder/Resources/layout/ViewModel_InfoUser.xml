<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Lbl_ProfileDetails"
        android:textSize="15sp"
        android:textColor="@color/gnt_black"/>
    <!--Time Section -->
    <LinearLayout
        android:id="@+id/LayoutTime"
        android:paddingTop="10dp"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginEnd="5dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_profile_user"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/TimeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/colorCommentText"
            android:gravity="start|center"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="3dp" />
    </LinearLayout>
    <!--Website Section -->
    <LinearLayout
        android:id="@+id/LayoutWebsite"
        android:paddingTop="5dp"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginEnd="5dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_profile_website"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/WebsiteText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/colorCommentText"
            android:gravity="start|center"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="3dp" />
    </LinearLayout>
    <!--Gander Section -->
    <LinearLayout
        android:id="@+id/LayoutGander"
        android:paddingTop="5dp"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginEnd="5dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_genders"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/GanderText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/colorCommentText"
            android:gravity="start|center"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="3dp" />
    </LinearLayout>
    <!--Birthday Section -->
    <LinearLayout
        android:id="@+id/LayoutBirthday"
        android:paddingTop="5dp"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginEnd="5dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_birthday"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/BirthdayText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/colorCommentText"
            android:gravity="start|center"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="3dp" />
    </LinearLayout>
    <!--Work Section -->
    <LinearLayout
        android:id="@+id/LayoutWork"
        android:paddingTop="5dp"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginEnd="5dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_profile_suitcase"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/WorkText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/colorCommentText"
            android:gravity="start|center"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="3dp" />
    </LinearLayout>
    <!--Live Section -->
    <LinearLayout
        android:id="@+id/LayoutLive"
        android:paddingTop="5dp"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginEnd="5dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_profile_home"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/LiveText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/colorCommentText"
            android:gravity="start|center"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="3dp" />
    </LinearLayout>
    <!--Study Section -->
    <LinearLayout
        android:id="@+id/LayoutStudy"
        android:paddingTop="5dp"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginEnd="5dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_layers"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/StudyText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/colorCommentText"
            android:gravity="start|center"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="3dp" />
    </LinearLayout>
    <!--Relationship Section -->
    <LinearLayout
        android:id="@+id/LayoutRelationship"
        android:paddingTop="5dp"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginEnd="5dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_profile_heart"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/RelationshipText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/colorCommentText"
            android:gravity="start|center"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="3dp" />
    </LinearLayout>
</LinearLayout>